<p id="notice"><%= notice %></p>

<h2>Admin Catalog</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="medium btn pill-left default">
  <%= link_to 'New Admin', new_admin_path %>
</div>
<div class="medium btn pill-right default"> 
  <%= link_to 'Back', admin_path(session[:admin_id].to_s.to_sym) %>
</div>
