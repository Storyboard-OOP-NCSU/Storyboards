<p id="notice"><%= notice %></p>

<h2> Story </h2>
<fieldset>
  <legend>Information</legend>
	<p>
	  <strong>Title:</strong>
	  <%= @story.title %>
	</p>
	<p>
	  <strong>Description:</strong>
	  <%= @story.description %>
	</p>
	<p>
	  <strong>Point:</strong>
	  <%= @story.point %>
	</p>
	<p>
 	 <strong>Stages:</strong>
 	 <%= @story.stages %>
	</p>
	<p>
 	 <strong>Project:</strong>
 	 <%= @story.project.title %>
	</p>
</fieldset>
<fieldset>
  <legend>Developers</legend>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @story.line_items.each do |line_item| %>
        <tr>
          <td><%= line_item.developer.name %></td>
          <td><%= line_item.developer.email %></td>
          <% if session[:position] == ['Developer'] %>
          	<td><%= link_to 'Remove', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</fieldset>

<% if session[:position] == ['Developer'] %>
  <div class="medium oval btn default">
    <%= link_to 'Back', project_path(@story.project) %>
  </div>
<% elsif session[:position] == ['Admin'] %>
    <% if params[:back] == 'project'%>
      <div class="medium oval btn default">
      <%= link_to 'Back', project_path(@story.project) %>
    <% else %>
      <%= link_to 'Back', stories_path%>
    <% end %>
  </div>
<% end %>


