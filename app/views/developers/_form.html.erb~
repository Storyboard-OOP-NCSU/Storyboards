<%= form_for(@developer) do |f| %>
  <% if @developer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@developer.errors.count, "error") %> prohibited this developer from being saved:</h2>
      <ul>
      <% @developer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<% if session[:position] == ['Admin'] %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
  	<%= f.label :password %><br>
  	<%= f.text_field :password %>
  </div>
  <div class="field">
      <%= f.label :project %>  
      <%= select("developer", "project_id", Project.all.collect{ |c| [ c.title, c.id] }) %>
  </div>
  <% end %>
  
  <% if session[:position] == ['Developer'] %>
  <div class="field">
  	<%= f.label 'change password' %><br>
  	<%= f.text_field :password %>
  </div>
  <div class="field">
      <%= f.label 'sign up story' %><br>  
      <%= select("developer", "story_id", Developer.find_by_id(session[:developer_id]).project.stories.collect{ |c| [ c.title, c.id] }) %>
  </div>
  <% end %>
  
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
