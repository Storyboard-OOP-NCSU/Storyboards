<%= form_for(@developer) do |f| %>
  <fieldset>
    <% if @developer.name == nil %>
      <legend>New Developer</legend>
    <% else %>
      <legend>Edit Developer</legend>
    <% end %>

    <% if @developer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@developer.errors.count, "error") %> prohibited this developer from being saved:</h2>
        <ul>
        <% @developer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
  	<% if session[:position] == ['Admin'] %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div>
    	<%= f.label :password %>
    	<%= f.text_field :password %>
    </div>
    <div>
        <%= f.label :project %>  
        <%= select("developer", "project_id", Project.all.collect{ |c| [ c.title, c.id] }) %>
    </div>
    <% end %>
    
    <% if session[:position] == ['Developer'] %>
    <div>
    	<%= f.label 'change password' %>
    	<%= f.text_field :password %>
    </div>
    <% end %>
    
    <br>
    <div <div class="pretty medium primary btn">
      <%= f.submit %>
    </div>
  </fieldset>
<% end %>
