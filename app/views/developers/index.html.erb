<p id="notice"><%= notice %></p>

<h2>Developers Catalog</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr>
        <td><%= developer.name %></td>
        <td><%= developer.email %></td>
        <% if developer.project.present? %>
            <td><%= developer.project.title %></td>
        <% else %>
            <td></td>
        <% end %>
        <td><%= link_to 'Remove', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Developer', new_developer_path %> |
<%= link_to 'Back', admin_path(session[:admin_id].to_s.to_sym) %>
