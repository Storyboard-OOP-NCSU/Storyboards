<p id="notice"><%= notice %></p>
<h1>Project</h1>
<fieldset>
  <legend>Information</legend>
  <p>
    <strong>Title:</strong>
    <%= @project.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @project.description %>
  </p>
 </fieldset>
<fieldset>
  <legend>Developers</legend>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% Developer.all.each do |developer| %>
      <% if developer.project == @project%>
        <tr>
          <td><%= developer.name %></td>
          <td><%= developer.email %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</fieldset>
<fieldset>
	<legend>Story Board</legend>
	<table>
	  <thead>
 	 <tr>
 		  <th>Title</th>
	    <th>Description</th>
 	 	  <th>Point</th>
 	 	  <th>Stages</th>
  	  <th colspan="3"></th>
 	 </tr>
	 </thead>
	
 	 <tbody>
 	 <% Story.all.each do |story| %>
      <% if story.project == @project%>
      <tr>
        <td><%= story.title %></td>
        <td><%= story.description %></td>
        <td><%= story.point %></td>
        <td><%= story.stages %></td>
        <% if session[:position] == ['Developer'] %>
        	<td><%= link_to 'Show', story %></td>
        	<td><%= link_to 'Edit', edit_story_path(story) %></td>
        	<td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
 	 <% end %>
 	 </tbody>
	</table>
</fieldset>
<% if session[:position] == ['Developer'] %>
	<br>
	<%= link_to 'New Story',new_story_path %>
<% end %>
<br>
<% if session[:position] == ['Developer'] %>
	<%= link_to 'Back', developer_path(session[:developer_id].to_s.to_sym) %>
<% else %>
	<%= link_to 'Back', projects_path %>
<% end %>
